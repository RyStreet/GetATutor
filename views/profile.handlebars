<h1>User: {{username}}</h1>
<h2>Email: {{email}} </h2>
<p>Subjects I'm Studying:</p>

<div id="subjectListUser" class="">
        {{#if subject.math}}
        <p>Math</p>
        {{/if}}
        {{#if subject.science}}
        <p>Science</p>
        {{/if}}
        {{#if subject.coding}}
        <p>Coding</p>
        {{/if}}
        {{#if subject.humanities}}
        <p>Humanities</p>
        {{/if}}
</div>
<a href="/rechoose-subjects" id="reChooseSubjects">Pick New Subjects</a>

<h2>My Appointments</h2>




{{#each appointments as |appointment|}}
<div id ="apptContainer" class="">

    <div>
    <h4>Date: {{appointment.date}} Time: {{appointment.time}} </h4>
     <p>Subject: {{appointment.subject}}</p> 
     <p>Tutor: {{appointment.tutor}}</p> 
   </div>

</div>
{{/each}}

